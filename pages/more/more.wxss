/**index.wxss**/
.container{
  padding: 0 20rpx;
}
.userinfo {
   display: flex;
   justify-content: space-between;
   align-items: center;

}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius:50%;
  margin-right: 15px;
}

username>.userinfo-nickname {
  color: #000;
}
.username{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  margin-right: 100rpx;
}
.username>.loca{
  font-size: 24rpx;
  color: #909090;
  margin-top: 15rpx;
  font-family: cursive;
}
.userinfo>button{
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #909090;
  margin-left: 100rpx;
}
.line{
  width:100%;
  margin-top: 30rpx;
  height:2rpx;
  background:#aaa;
}
.arrow{
  width: 60rpx;
  height: 60rpx;
  border-radius:50%;
  margin-right: 10px;
  margin-top: 10px;
}
.edit{
  margin-left: 20rpx;
  font-size: 30rpx;
  color:#000;
  margin-top: 15rpx;
}